<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".MainActivity.SettingActivity">

    <TextView
            android:id="@+id/textView6"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:text="학교"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.056" />

    <EditText
            android:id="@+id/edit_universityname"
            android:layout_width="340dp"
            android:layout_height="42dp"
            android:background="@drawable/signup_university_edittext"
            android:ems="10"
            android:hint="학교 이름을 검색하세요."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.001" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_major"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/edit_majorname"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_majorname"
            app:layout_constraintTop_toBottomOf="@+id/edit_majorname" />

    <EditText
            android:id="@+id/edit_majorname"
            android:layout_width="340dp"
            android:layout_height="42dp"
            android:background="@drawable/signup_university_edittext"
            android:ems="10"
            android:hint="학과 이름을 검색하세요."
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.01" />

    <TextView
            android:id="@+id/textView7"
            android:layout_width="52dp"
            android:layout_height="30dp"
            android:text="학과"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_university"
            app:layout_constraintVertical_bias="0.065" />


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_university"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/edit_universityname"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_universityname"
            app:layout_constraintTop_toBottomOf="@+id/edit_universityname" />

    <TextView
            android:id="@+id/textView8"
            android:layout_width="75dp"
            android:layout_height="34dp"
            android:layout_marginTop="16dp"
            android:text="회원가입"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btn_signup1next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="다음"
            android:background="@drawable/standard_btn_rev"
            android:textColor="#00BFFF"
            android:textSize="15.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976" />

</androidx.constraintlayout.widget.ConstraintLayout>