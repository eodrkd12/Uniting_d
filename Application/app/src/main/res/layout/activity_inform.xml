<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity.InformActivity">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_review"
            android:layout_width="92dp"
            android:layout_height="55dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.95"
            app:srcCompat="@android:drawable/ic_dialog_email" />

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <FrameLayout
                    android:id="@+id/frame_inform"
                    android:layout_width="match_parent"
                    android:layout_height="605dp"
                    android:layout_below="@+id/bnv_inform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bnv_inform"
                    app:layout_constraintVertical_bias="0.0">

            </FrameLayout>

            <ImageButton
                    android:id="@+id/btn_phone"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    app:layout_constraintStart_toStartOf="@+id/text_inform_title"
                    app:layout_constraintTop_toBottomOf="@+id/text_inform_title"
                    app:srcCompat="@android:drawable/ic_menu_call" />

            <fragment
                    android:id="@+id/map"
                    android:name="com.naver.maps.map.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="218dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.727"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bnv_inform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:background="#00000000"
                    android:paddingBottom="20dp"
                    app:itemIconTint="@drawable/selector_bottomnav"
                    app:itemTextColor="#000000"
                    app:labelVisibilityMode="auto"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_phone"
                    app:menu="@menu/bnv_inform" />

            <TextView
                    android:id="@+id/text_inform_title"
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="@+id/map"
                    app:layout_constraintTop_toBottomOf="@+id/map" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>