<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
            android:text="데이팅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_dating" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline12" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline13" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:tag="DATING"/>
    <Button
            android:text="장터"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_market"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_dating"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline13"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:tag="MARKET"/>
    <Button
            android:text="스터디"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_study" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline12" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline13"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:tag="STUDY"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline12"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.500684"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline13"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
</android.support.constraint.ConstraintLayout>