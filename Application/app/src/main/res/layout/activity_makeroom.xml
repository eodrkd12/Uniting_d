<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/text_logo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGO"
            android:textAlignment="center"
            android:textSize="50dp" />

    <TextView
            android:id="@+id/text_lable1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="방이름"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/text_room_name"
                android:layout_width="231dp"
                android:layout_height="90dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp" />

    </LinearLayout>

    <EditText
            android:id="@+id/text_max"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

    <RadioGroup
            android:id="@+id/rdgroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <RadioButton
                android:id="@+id/r_btn_category1"
                android:layout_width="493dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="취미" />

        <RadioButton
                android:id="@+id/r_btn_category2"
                android:layout_width="493dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="스터디" />

        <RadioButton
                android:id="@+id/r_btn_category3"
                android:layout_width="493dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="취창업" />

        <RadioButton
                android:id="@+id/r_btn_category4"
                android:layout_width="493dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="고민상담" />

        <RadioButton
                android:id="@+id/r_btn_category5"
                android:layout_width="493dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="아무말" />
        </RadioGroup>

    <TextView
            android:id="@+id/text_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="방소개"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp" />

    <EditText
            android:id="@+id/text_room_intro"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

    <Button
            android:id="@+id/btn_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

</LinearLayout>