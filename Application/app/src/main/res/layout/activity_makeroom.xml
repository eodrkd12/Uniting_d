<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#87CEEB"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/color_background"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

        <TextView
                android:id="@+id/text_lable1"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                android:layout_weight="1"
                android:text="방이름"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/text_room_name"
                app:layout_constraintHorizontal_bias="0.246"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/text_lable2"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:text="인원"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/rdgroup"
                app:layout_constraintEnd_toStartOf="@+id/text_max"
                app:layout_constraintHorizontal_bias="0.253"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_lable1"
                app:layout_constraintVertical_bias="0.0" />

        <EditText
                android:id="@+id/text_room_name"
                android:layout_width="248dp"
                android:layout_height="45dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="44dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <EditText
                android:id="@+id/text_max"
                android:layout_width="238dp"
                android:layout_height="44dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="44dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_room_name" />

        <EditText
                android:id="@+id/text_introduce"
                android:layout_width="366dp"
                android:layout_height="212dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="64dp"

                android:layout_marginRight="10dp"
                android:background="@drawable/color_background2"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.111"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rdgroup" />

        <Button
                android:id="@+id/btn_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="만들기"
                android:layout_marginRight="10dp"
                android:background="@drawable/button2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_introduce"
                app:layout_constraintVertical_bias="0.335" />

        <RadioGroup
                android:id="@+id/rdgroup"
                android:layout_width="403dp"
                android:layout_height="58dp"
                android:layout_marginTop="64dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_max">

            <RadioButton
                    android:id="@+id/r_btn_category1"
                    android:layout_width="493dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="취미" />

            <RadioButton
                    android:id="@+id/r_btn_category2"
                    android:layout_width="493dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="스터디" />

            <RadioButton
                    android:id="@+id/r_btn_category3"
                    android:layout_width="493dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="취/창업" />

            <RadioButton
                    android:id="@+id/r_btn_category4"
                    android:layout_width="493dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="고민" />

            <RadioButton
                    android:id="@+id/r_btn_category5"
                    android:layout_width="493dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="아무말" />

            <TextView
                    android:id="@+id/text_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="방소개"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp" />

        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>