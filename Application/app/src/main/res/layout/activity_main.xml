<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/layout_logo">
        <TextView
                android:text="KMU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_university" android:layout_weight="1"
                android:textSize="30dp"/>
        <TextView
                android:text="LOGO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_logo" android:layout_weight="1"
                android:textSize="30dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_null" android:layout_weight="1"
                android:textSize="30dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/layout_search">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_search" android:layout_weight="1"/>
        <Button
                android:text="검색"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_search" android:layout_weight="1"/>
    </LinearLayout>

    <FrameLayout
            android:id = "@+id/frame_main"
            android:layout_width="match_parent"
            android:layout_height="562dp">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/bnv_main"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:labelVisibilityMode="auto"/>

</LinearLayout>