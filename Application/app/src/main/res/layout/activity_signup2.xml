<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".IntroActivity.Signup2Activity">

    <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="학교인증"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="웹메일"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_univid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintVertical_bias="0.844" />

    <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="인증번호"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_univid" />

    <Button
            android:id="@+id/btn_sendmail"
            android:layout_width="69dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/standard_btn_rev"
            android:text="보내기"
            android:textColor="#00BFFF"
            android:textSize="15.5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.953"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
            android:id="@+id/text_univaddr"
            android:layout_width="169dp"
            android:layout_height="42dp"
            android:layout_gravity="right"
            android:text="SchoolAddress"
            android:textColor="#808080"
            android:textSize="20dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/edit_univid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.648"
            app:layout_constraintStart_toStartOf="parent" />

    <EditText
            android:id="@+id/edit_univid"
            android:layout_width="275dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="132dp"
            android:paddingRight="150dp"
            android:ems="10"
            android:background="@drawable/signup_university_edittext"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/btn_sendmail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text" />

    <Button
            android:id="@+id/btn_certify"
            android:layout_width="89dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/standard_btn_rev"
            android:text="인증확인"
            android:textColor="#00BFFF"
            android:textSize="15.5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toEndOf="@+id/edit_certifynumber"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
            android:id="@+id/edit_certifynumber"
            android:layout_width="257dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:background="@drawable/signup_university_edittext"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.207"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

</androidx.constraintlayout.widget.ConstraintLayout>