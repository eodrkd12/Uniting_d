<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="240dp">

    <ImageView
            android:id="@+id/image_cafeteria"
            android:layout_width="179dp"
            android:layout_height="162dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
            android:id="@+id/text_cafeteria_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/image_cafeteria"
            app:layout_constraintTop_toBottomOf="@+id/image_cafeteria" />

    <TextView
            android:id="@+id/text_starpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/image_cafeteria"
            app:layout_constraintTop_toBottomOf="@+id/text_cafeteria_title" />
</androidx.constraintlayout.widget.ConstraintLayout>

